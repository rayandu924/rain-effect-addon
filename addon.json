{
  "metadata": {
    "name": "Rain Effect Responsive",
    "version": "2.0.0",
    "description": "Realistic responsive rain animation that scales with container size",
    "author": "MyWallpaper",
    "icon": "üåßÔ∏è"
  },
  "settings": {
    "intensity": {
      "type": "range",
      "label": "Rain Density",
      "description": "Rain density per 100x100px area",
      "min": 1,
      "max": 20,
      "step": 1,
      "default": 8
    },
    "speed": {
      "type": "range", 
      "label": "Fall Speed",
      "description": "Rain fall speed multiplier",
      "min": 0.5,
      "max": 3.0,
      "step": 0.1,
      "default": 1.5
    },
    "dropColor": {
      "type": "color",
      "label": "Rain Color", 
      "description": "Color of the raindrops",
      "default": "#ffffff"
    },
    "dropSize": {
      "type": "range",
      "label": "Drop Thickness",
      "description": "Thickness of raindrops (relative to container)",
      "min": 0.5,
      "max": 4.0,
      "step": 0.1,
      "default": 2.0
    },
    "windDirection": {
      "type": "range",
      "label": "Wind Angle",
      "description": "Wind angle affecting rain direction",
      "min": -45,
      "max": 45,
      "step": 1,
      "default": 0
    },
    "opacity": {
      "type": "range",
      "label": "Rain Opacity",
      "description": "Overall rain transparency",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 60
    },
    "enableSplash": {
      "type": "boolean",
      "label": "Ground Splashes",
      "description": "Show splash effects when raindrops hit ground",
      "default": true
    }
  }
}