{
  "name": "Rain Effect",
  "version": "1.0.0",
  "description": "Realistic rain animation with configurable intensity and physics",
  "type": "effects",
  "author": "MyWallpaper",
  "icon": "üåßÔ∏è",
  "settings": {
    "intensity": {
      "type": "range",
      "label": "Rain Intensity",
      "description": "Number of raindrops falling",
      "min": 10,
      "max": 200,
      "step": 10,
      "default": 80
    },
    "speed": {
      "type": "range",
      "label": "Fall Speed",
      "description": "How fast raindrops fall",
      "min": 0.5,
      "max": 5.0,
      "step": 0.1,
      "default": 2.0
    },
    "dropColor": {
      "type": "color",
      "label": "Rain Color",
      "description": "Color of the raindrops",
      "default": "#87CEEB"
    },
    "dropSize": {
      "type": "range",
      "label": "Drop Size",
      "description": "Size of individual raindrops",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 2
    },
    "windDirection": {
      "type": "range",
      "label": "Wind Direction",
      "description": "Wind angle affecting rain direction",
      "min": -30,
      "max": 30,
      "step": 1,
      "default": 0
    },
    "opacity": {
      "type": "range",
      "label": "Rain Opacity",
      "description": "Transparency of the rain effect",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 70
    },
    "enableSplash": {
      "type": "boolean",
      "label": "Enable Splash Effects",
      "description": "Show splash effects when raindrops hit the ground",
      "default": true
    }
  }
}