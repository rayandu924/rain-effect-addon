{
  "name": "Rain Effect Responsive",
  "version": "2.1.1",
  "description": "Fully responsive rain animation with unlimited scaling range",
  "author": "MyWallpaper",
  "type": "visual-effect",
  "categories": ["weather", "animation"],
  "settings": {
    "intensity": {
      "type": "range",
      "label": "Rain Count",
      "description": "Total number of raindrops (sizes adapt to container)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80
    },
    "speed": {
      "type": "range",
      "label": "Fall Speed",
      "description": "Rain fall speed multiplier",
      "min": 0.5,
      "max": 3.0,
      "step": 0.1,
      "default": 1.5
    },
    "dropColor": {
      "type": "color",
      "label": "Rain Color",
      "description": "Color of the raindrops",
      "default": "#ffffff"
    },
    "dropSize": {
      "type": "range",
      "label": "Drop Thickness",
      "description": "Thickness of raindrops (relative to container)",
      "min": 0.5,
      "max": 4.0,
      "step": 0.1,
      "default": 2.0
    },
    "windDirection": {
      "type": "range",
      "label": "Wind Angle",
      "description": "Wind angle affecting rain direction",
      "min": -45,
      "max": 45,
      "step": 1,
      "default": 0
    },
    "opacity": {
      "type": "range",
      "label": "Rain Opacity",
      "description": "Overall rain transparency",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 60
    },
    "enableSplash": {
      "type": "boolean",
      "label": "Ground Splashes",
      "description": "Show splash effects when raindrops hit ground",
      "default": true
    }
  }
}
